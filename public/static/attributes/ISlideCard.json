{
  "classId": "idm.component.mobile.slideCard",
  "comName": "滑动卡片",
  "className": "ISlideCard",
  "comType": "common",
  "comLangue": "vue",
  "compositeAttr": [
    {
      "type": "input",
      "layoutType": "inline",
      "text": "唯一标识",
      "bindKey": "ctrlId",
      "disabled": true,
      "default": "@[packageid]",
      "desc": "",
      "helpUrl": ""
    },
    {
      "type": "group",
      "text": "基本属性",
      "desc": "提供设置组件能达到展示效果的基本属性设置信息",
      "children": [
        {
          "type": "select",
          "layoutType": "inline",
          "text": "显示模式",
          "desc": "设置内容过多时的显示模式，可以左右滑动或上下滑动",
          "bindKey": "layoutType",
          "dictionary": [
            {
              "label": "左右滑动",
              "value": "scroll"
            },
            {
              "label": "上下滑动",
              "value": "slip"
            }
          ],
          "default": "scroll"
        },
        {
          "type": "inputNumber",
          "layoutType": "inline",
          "text": "展示列数",
          "desc": "左右滑动时可设置为0，表示不固定列数，允许超出。上下滑动时则必须大于0",
          "bindKey": "columNum",
          "default": 3
        },
        {
          "type": "switch",
          "layoutType": "inline",
          "text": "显示标题",
          "desc": "是否显示标题栏",
          "bindKey": "isShowTitleBar",
          "default": "true"
        },
        {
          "type": "input",
          "layoutType": "inline",
          "text": "组件标题",
          "desc": "组件标题",
          "bindKey": "title",
          "default": "年度学时",
          "display": "@[isShowTitleBar]"
        },
        {
          "type": "switch",
          "layoutType": "inline",
          "text": "显示图标",
          "desc": "配置是否显示标题右侧图标",
          "bindKey": "showIcon",
          "default": "true",
          "display": "@[isShowTitleBar]"
        },
        {
          "type": "switch",
          "layoutType": "inline",
          "text": "显示更多",
          "desc": "是否显示更多按钮",
          "bindKey": "moreBtn",
          "default": "true",
          "display": "@[isShowTitleBar]"
        },
        {
          "type": "select",
          "layoutType": "inline",
          "text": "数据来源",
          "desc": "设置数据来源",
          "bindKey": "dataType",
          "dictionary": [
            {
              "label": "静态配置",
              "value": "static"
            },
            {
              "label": "数据源",
              "value": "dataSource"
            },
            {
              "label": "自定义接口",
              "value": "customInterface"
            }
          ],
          "default": "static"
        },
        {
          "type": "input",
          "layoutType": "inline",
          "text": "接口地址",
          "bindKey": "url",
          "desc": "用于获取数据的接口地址。请按照统一标准的返回格式返回文本数据，格式如下：{\"code\":\"200\",\"data\":\"\",...}",
          "display": "@[dataType=='customInterface']",
          "default": "/ctrl/website/api/columnlist"
        },
        {
          "type": "treeSelect",
          "layoutType": "inline",
          "text": "选择栏目",
          "bindKey": "selectColumn",
          "dataSourceUrl": "/ctrl/website/api/channelTree",
          "default": "",
          "openGroup": true,
          "display": "@[dataType=='customInterface']"
        },
        {
          "type": "inputNumber",
          "layoutType": "inline",
          "text": "显示数量",
          "bindKey": "limit",
          "display": "@[dataType=='customInterface']"
        },
        {
          "type": "treeSelect",
          "layoutType": "block",
          "text": "组件数据源",
          "desc": "用于选择组件的数据源, 入参如下{id:数据源的id,pageId:页面id,...urlObject:当前路径参数}",
          "bindKey": "dataSource",
          "display": "@[dataType=='dataSource']",
          "dataSourceUrl": "ctrl/dataSource/getDatasourceByGroup"
        },
        {
          "type": "actionSelect",
          "layoutType": "block",
          "text": "自定义函数",
          "bindKey": "customFunction",
          "display": "@[dataType=='dataSource' || dataType=='customInterface']",
          "desc": "用于格式化数据源返回的数据，参数为{urlObject:url参数,pageId:页面id,customParam:自定义的参数,resultData:原始数据,moduleObject:组件信息}",
          "multiple": false
        },
        {
          "type": "table",
          "text": "组件静态配置",
          "bindKey": "dataStaticSet",
          "tabText": "数据[index]",
          "display": "@[dataType=='static']",
          "children": [
            {
              "type": "input",
              "layoutType": "inline",
              "text": "key标识",
              "desc": "设置此项的唯一标识",
              "bindKey": "key"
            },
            {
              "type": "uploadImage",
              "layoutType": "inline",
              "text": "图片",
              "bindKey": "imgUrl",
              "multiple": false,
              "default": "",
              "display": "@[displayType=='img']"
            },
            {
              "type": "iconSelect",
              "layoutType": "inline",
              "text": "图标",
              "bindKey": "iconFont",
              "multiple": false,
              "default": "",
              "display": "@[displayType=='icon']"
            },
            {
              "type": "input",
              "layoutType": "inline",
              "text": "文字描述",
              "desc": "设置此项的文字描述",
              "bindKey": "name"
            }
          ]
        }
      ]
    },
    {
      "type": "group",
      "text": "内容属性设置",
      "desc": "点击？查看内容属性设置用法指南",
      "helpUrl": "",
      "children": [
        {
          "type": "radio",
          "layoutType": "inline",
          "text": "图片图标",
          "desc": "设置图像区域的展示类型",
          "bindKey": "displayType",
          "dictionary": [
            {
              "label": "图片",
              "value": "img"
            },
            {
              "label": "图标",
              "value": "icon"
            }
          ],
          "default": "img"
        },
        {
          "type": "switch",
          "layoutType": "inline",
          "text": "显示文字",
          "bindKey": "showText",
          "default": "true"
        },
        {
          "type": "input",
          "layoutType": "inline",
          "text": "加载描述",
          "desc": "用于指定组件加载中时的显示文字",
          "bindKey": "loadingDescription",
          "default": "加载中..."
        },
        {
          "type": "input",
          "layoutType": "inline",
          "text": "为空描述",
          "desc": "用于指定组件无数据时的显示文字",
          "bindKey": "emptyDescription",
          "default": "暂无数据"
        },
        {
          "type": "group",
          "text": "为空样式",
          "desc": "点击？查看为空样式用法指南",
          "helpUrl": "",
          "children": [
            {
              "type": "inputNumber",
              "layoutType": "inline",
              "text": "图标大小",
              "bindKey": "emptyImageSize",
              "default": 70
            },
            {
              "type": "font",
              "layoutType": "block",
              "text": "文字",
              "bindKey": "emptyFont",
              "default": {
                "fontColors": {
                  "hex8": "#969799"
                },
                "fontSize": 14,
                "fontSizeUnit": "px"
              }
            }
          ]
        },
        {
          "type": "group",
          "text": "加载样式",
          "desc": "点击？查看加载样式用法指南",
          "helpUrl": "",
          "children": [
            {
              "type": "inputNumber",
              "layoutType": "inline",
              "text": "图标大小",
              "bindKey": "loadingSize",
              "default": 24
            },
            {
              "type": "font",
              "layoutType": "block",
              "text": "文字",
              "bindKey": "loadingFont",
              "default": {
                "fontColors": {
                  "hex8": "#969799"
                },
                "fontSize": 14,
                "fontSizeUnit": "px"
              }
            }
          ]
        },
        {
          "type": "group",
          "text": "item字段设置",
          "display": "@[dataType=='dataSource']",
          "desc": "用来设置每个item在标准格式下的取值字段",
          "children": [
            {
              "type": "input",
              "layoutType": "inline",
              "text": "循环字段",
              "desc": "举例：返回的数据中rows是要取的数组，则此处使用rows",
              "bindKey": "resDataField",
              "default": ""
            },
            {
              "type": "input",
              "layoutType": "inline",
              "text": "图片字段",
              "desc": "举例：item数组下有imgUrl字段，为图片，则这里应填imgUrl",
              "bindKey": "imageField",
              "display": "@[displayType=='img']",
              "default": "imgUrl"
            },
            {
              "type": "input",
              "layoutType": "inline",
              "text": "图标字段",
              "desc": "举例：item数组下有iconUrl字段，为图标，则这里应填iconUrl",
              "bindKey": "iconField",
              "display": "@[displayType=='icon']",
              "default": "iconUrl"
            },
            {
              "type": "input",
              "layoutType": "inline",
              "text": "图标URL",
              "bindKey": "iconfontUrl",
              "display": "@[displayType=='icon']",
              "desc": "从iconfont下载的图标库文件夹地址， 不需要具体到文件，比如：图标css文件的路径是【/project/font_1248060_zpcega7i6m9/iconfont.css】，我们这里只需要填写【/project/font_1248060_zpcega7i6m9/】，注意：里面的文件建议不要做任何修改，否则可能读取不正确，为空时默认使用项目自带iconfont，反之设置自定义路径后iconfont类名将从接口获取",
              "placeholder": "请输入"
            },
            {
              "type": "input",
              "layoutType": "inline",
              "text": "图标前缀",
              "bindKey": "iconPrefix",
              "display": "@[displayType=='icon']",
              "desc": "设置iconfont类名前缀，如类名是iconfont icon-shouye前缀为icon-",
              "default": "",
              "placeholder": "请输入"
            },
            {
              "type": "input",
              "layoutType": "inline",
              "text": "图标字体",
              "bindKey": "iconFontFamily",
              "display": "@[displayType=='icon']",
              "desc": "设置iconfont字体，如类名是iconfont icon-shouye字体为iconfont",
              "default": "",
              "placeholder": "请输入"
            },
            {
              "type": "input",
              "layoutType": "inline",
              "text": "基本文字",
              "desc": "举例：item数组下有name字段，为基本文字，则这里应填name",
              "bindKey": "mainTextField",
              "default": "name",
              "display": "@[showText]"
            },
            {
              "type": "table",
              "text": "扩展文字",
              "bindKey": "extraFields",
              "tabText": "扩展[index]",
              "display": "@[showText]",
              "children": [
                {
                  "type": "input",
                  "layoutType": "inline",
                  "text": "取值字段",
                  "desc": "设置此项对应的取值",
                  "bindKey": "name"
                },
                {
                  "type": "inputNumber",
                  "layoutType": "inline",
                  "text": "宽度占比",
                  "desc": "设置此项宽度占整行的百分比",
                  "bindKey": "widthRatio"
                },
                {
                  "type": "select",
                  "layoutType": "inline",
                  "text": "对齐方式",
                  "desc": "设置此扩展字段的对齐方式",
                  "bindKey": "textAlign",
                  "dictionary": [
                    {
                      "label": "左",
                      "value": "left"
                    },
                    {
                      "label": "中",
                      "value": "center"
                    },
                    {
                      "label": "右",
                      "value": "right"
                    }
                  ]
                }
              ]
            }
          ]
        },
        {
          "type": "group",
          "text": "item跳转设置",
          "desc": "点击？查看item跳转设置用法指南",
          "helpUrl": "",
          "children": [
            {
              "type": "select",
              "layoutType": "inline",
              "text": "跳转方式",
              "desc": "item跳转方式",
              "bindKey": "itemJumpTarget",
              "dictionary": [
                {
                  "label": "当前页跳转",
                  "value": "_self"
                },
                {
                  "label": "新窗口打开",
                  "value": "_blank"
                },
                {
                  "label": "静态单页面打开",
                  "value": "router"
                },
                {
                  "label": "动态单页面打开",
                  "value": "feild"
                },
                {
                  "label": "自定义函数",
                  "value": "custom"
                }
              ],
              "default": "_self"
            },
            {
              "type": "input",
              "layoutType": "inline",
              "text": "跳转地址",
              "desc": "item跳转地址,可填写item数据作为入参，例如：@[url]?itemId=@[id]&itemName=@[name]",
              "bindKey": "itemJumpUrl",
              "display": "@[itemJumpTarget=='_self'||itemJumpTarget=='_blank']"
            },
            {
              "type": "pageSelect",
              "layoutType": "inline",
              "text": "跳转页面",
              "desc": "单页面模式下，要跳转的页面",
              "bindKey": "itemJumpPageId",
              "display": "@[itemJumpTarget=='router']"
            },
            {
              "type": "input",
              "layoutType": "inline",
              "text": "跳转字段",
              "desc": "单页面模式下，要跳转的页面",
              "bindKey": "itemJumpPageFeild",
              "display": "@[itemJumpTarget=='feild']"
            },
            {
              "type": "actionSelect",
              "layoutType": "block",
              "text": "跳转自定义函数",
              "bindKey": "customItemJumpFunction",
              "desc": "自定义跳转逻辑, 入参为{item:当前点击的item的单项数据}",
              "display": "@[itemJumpTarget=='custom']",
              "multiple": false
            }
          ]
        },
        {
          "type": "group",
          "text": "item样式",
          "children": [
            {
              "type": "inputNumber",
              "layoutType": "inline",
              "text": "item宽",
              "bindKey": "itemBoxWidth",
              "default": 90
            },
            {
              "type": "inputNumber",
              "layoutType": "inline",
              "text": "item高",
              "bindKey": "itemBoxHeight",
              "default": 90
            },
            {
              "type": "inputNumber",
              "layoutType": "inline",
              "text": "图片宽",
              "bindKey": "itemImgWidth",
              "default": 50
            },
            {
              "type": "inputNumber",
              "layoutType": "inline",
              "text": "图片高",
              "bindKey": "itemImgHeight",
              "default": 50
            },
            {
              "type": "inputNumber",
              "layoutType": "inline",
              "text": "图片圆角",
              "bindKey": "itemImgRadius",
              "default": 5
            },
            {
              "type": "inputNumber",
              "layoutType": "inline",
              "text": "图标大小",
              "bindKey": "itemIconSize",
              "display": "@[displayType=='icon']",
              "default": 50
            },
            {
              "type": "colorPicker",
              "layoutType": "inline",
              "text": "图标颜色",
              "display": "@[displayType=='icon']",
              "bindKey": "itemIconColor"
            },
            {
              "type": "inputNumber",
              "layoutType": "inline",
              "text": "item间隔",
              "bindKey": "itemMargin",
              "display": "@[layoutType=='scroll'&&columNum == 0]",
              "default": 0
            },
            {
              "type": "radio",
              "layoutType": "inline",
              "text": "行间类型",
              "desc": "设置行间距类型",
              "bindKey": "rowMarginType",
              "dictionary": [
                {
                  "label": "自适应",
                  "value": "adapt"
                },
                {
                  "label": "固定值",
                  "value": "static"
                }
              ],
              "display": "@[layoutType!='scroll']",
              "default": "adapt"
            },
            {
              "type": "inputNumber",
              "layoutType": "inline",
              "text": "行间隔值",
              "bindKey": "rowMargin",
              "display": "@[layoutType!='scroll'&&rowMarginType=='static']",
              "default": 0
            },
            {
              "type": "colorPicker",
              "layoutType": "inline",
              "text": "背景颜色",
              "bindKey": "itemBgColor"
            },
            {
              "type": "input",
              "layoutType": "inline",
              "text": "阴影样式",
              "bindKey": "itemShadow"
            },
            {
              "type": "border",
              "layoutType": "block",
              "text": "边框",
              "bindKey": "itemBorder"
            },
            {
              "type": "box",
              "layoutType": "block",
              "text": "内外边距",
              "bindKey": "itembox",
              "default": {
                "marginTopVal": "0",
                "marginRightVal": "0",
                "marginBottomVal": "0",
                "marginLeftVal": "0",
                "paddingTopVal": "5px",
                "paddingRightVal": "5px",
                "paddingBottomVal": "5px",
                "paddingLeftVal": "5px"
              }
            },
            {
              "type": "font",
              "layoutType": "block",
              "text": "基本文字样式",
              "bindKey": "mainFont",
              "display": "@[showText]"
            },
            {
              "type": "font",
              "layoutType": "block",
              "text": "扩展文字样式",
              "bindKey": "extraFont",
              "display": "@[showText]"
            }
          ]
        },
        {
          "type": "group",
          "text": "item触发样式",
          "children": [
            {
              "type": "colorPicker",
              "layoutType": "inline",
              "text": "背景颜色",
              "bindKey": "itemActiveBgColor"
            },
            {
              "type": "input",
              "layoutType": "inline",
              "text": "阴影样式",
              "bindKey": "itemActiveShadow"
            },
            {
              "type": "border",
              "layoutType": "block",
              "text": "边框",
              "bindKey": "itemActiveBorder"
            }
          ]
        }
      ]
    },
    {
      "type": "group",
      "text": "标题属性设置",
      "desc": "点击？查看样式设置用法指南",
      "display": "@[isShowTitleBar]",
      "helpUrl": "",
      "children": [
        {
          "type": "radio",
          "layoutType": "inline",
          "text": "图标位置",
          "desc": "设置组件标题图标位置",
          "bindKey": "titleIconPosition",
          "display": "@[showIcon]",
          "dictionary": [
            {
              "label": "左边",
              "value": "left"
            },
            {
              "label": "右边",
              "value": "right"
            }
          ],
          "default": "left"
        },
        {
          "type": "iconSelect",
          "layoutType": "inline",
          "text": "自定义图标",
          "bindKey": "titleIcon",
          "display": "@[showIcon]"
        },
        {
          "type": "colorPicker",
          "layoutType": "inline",
          "text": "图标颜色",
          "bindKey": "titleIconColor",
          "display": "@[showIcon]"
        },
        {
          "type": "inputNumber",
          "layoutType": "inline",
          "text": "图标大小",
          "bindKey": "titleIconSize",
          "display": "@[showIcon]",
          "default": 16
        },
        {
          "type": "font",
          "layoutType": "block",
          "text": "标题文字",
          "desc": "标题文字样式设置",
          "bindKey": "titleFont",
          "default": {
            "fontColors": {
              "hex": "#333333",
              "hex8": "#333333FF"
            },
            "fontSize": 16,
            "fontSizeUnit": "px",
            "fontWeight": "600"
          }
        },
        {
          "type": "group",
          "text": "更多属性设置",
          "desc": "点击？查看更多属性设置用法指南",
          "display": "@[moreBtn]",
          "helpUrl": "",
          "children": [
            {
              "type": "select",
              "layoutType": "inline",
              "text": "跳转方式",
              "desc": "更多按钮跳转方式",
              "bindKey": "moreTarget",
              "dictionary": [
                {
                  "label": "当前页跳转",
                  "value": "_self"
                },
                {
                  "label": "新窗口打开",
                  "value": "_blank"
                },
                {
                  "label": "单页面打开",
                  "value": "router"
                },
                {
                  "label": "自定义函数",
                  "value": "custom"
                }
              ],
              "default": "_self"
            },
            {
              "type": "input",
              "layoutType": "inline",
              "text": "跳转地址",
              "desc": "更多按钮跳转地址",
              "bindKey": "moreUrl",
              "display": "@[moreTarget=='_self'||moreTarget=='_blank']"
            },
            {
              "type": "pageSelect",
              "layoutType": "inline",
              "text": "跳转页面",
              "desc": "单页面模式下，要跳转的页面",
              "bindKey": "moreBtnToPageId",
              "display": "@[moreTarget=='router']"
            },
            {
              "type": "actionSelect",
              "layoutType": "block",
              "text": "跳转自定义函数",
              "bindKey": "customMoreBtnFunction",
              "desc": "自定义跳转逻辑",
              "display": "@[moreTarget=='custom']",
              "multiple": false
            },
            {
              "type": "font",
              "layoutType": "block",
              "text": "更多文字",
              "desc": "更多文字样式设置",
              "bindKey": "moreFont"
            },
            {
              "type": "inputNumber",
              "layoutType": "inline",
              "text": "图标大小",
              "desc": "图标大小",
              "bindKey": "moreIconSize",
              "default": 22
            },
            {
              "type": "colorPicker",
              "layoutType": "inline",
              "text": "图标颜色",
              "desc": "图标颜色",
              "bindKey": "moreIconColor"
            }
          ]
        }
      ]
    },
    {
      "type": "group",
      "text": "外层容器样式",
      "desc": "点击？查看样式设置用法指南",
      "helpUrl": "",
      "children": [
        {
          "type": "inlineGroup",
          "text": "宽高",
          "children": [
            {
              "type": "input",
              "layoutType": "block",
