{
    "classId": "idm.component.mobile.icheckboxcard",
    "comName": "多选卡片",
    "className": "ICheckboxCard",
    "comType": "common",
    "comLangue": "vue",
    "compositeAttr": [
        {
            "type": "input",
            "layoutType": "inline",
            "text": "唯一标识",
            "bindKey": "ctrlId",
            "disabled": true,
            "default": "@[packageid]",
            "desc": "",
            "helpUrl": ""
        },
        {
            "type": "group",
            "text": "基本属性",
            "desc": "提供设置组件能达到展示效果的基本属性设置信息",
            "children": [
                {
                    "type": "radio",
                    "layoutType": "inline",
                    "text": "图标形状",
                    "desc": "配置左侧checkbox形状",
                    "bindKey": "iconStyle",
                    "default": "square",
                    "dictionary": [
                        {
                            "label": "方形",
                            "value": "square"
                        },
                        {
                            "label": "圆形",
                            "value": "round"
                        }
                    ]
                }
            ]
        },
        {
            "type": "group",
            "text": "容器样式设置",
            "desc": "点击？查看样式设置用法指南",
            "helpUrl": "",
            "children": [
                {
                    "type": "inlineGroup",
                    "text": "宽高",
                    "children": [
                        {
                            "type": "input",
                            "layoutType": "block",
                            "text": "宽",
                            "desc": "填写auto则为自适应，或者使用px、%、vw等单位，比如100%、100px、100vw等等",
                            "bindKey": "width",
                            "default": "100%"
                        },
                        {
                            "type": "input",
                            "layoutType": "block",
                            "text": "高",
                            "desc": "填写auto则为自适应，或者使用px、%、vh等单位，比如100%、100px、100vh等等",
                            "bindKey": "height",
                            "default": "auto"
                        }
                    ]
                },
                {
                    "type": "input",
                    "layoutType": "inline",
                    "text": "阴影",
                    "bindKey": "boxShadow"
                },
                {
                    "type": "colorPicker",
                    "layoutType": "inline",
                    "text": "背景色",
                    "bindKey": "bgColor",
                    "placeholder": "请选择颜色",
                    "default": {}
                },
                {
                    "type": "box",
                    "layoutType": "block",
                    "text": "内外边距",
                    "bindKey": "box",
                    "default": {
                        "marginTopVal": "",
                        "marginRightVal": "",
                        "marginBottomVal": "",
                        "marginLeftVal": "",
                        "paddingTopVal": "10px",
                        "paddingRightVal": "10px",
                        "paddingBottomVal": "10px",
                        "paddingLeftVal": "10px"
                    }
                },
                {
                    "type": "border",
                    "layoutType": "block",
                    "text": "边框",
                    "bindKey": "border"
                }
            ]
        },
        {
            "type": "group",
            "text": "单项样式设置",
            "desc": "点击？查看样式设置用法指南",
            "helpUrl": "",
            "children": [
                {
                    "type": "input",
                    "layoutType": "inline",
                    "text": "阴影",
                    "bindKey": "subBoxShadow",
                    "default": "0 0 3px 2px #F2F2F2"
                },
                {
                    "type": "colorPicker",
                    "layoutType": "inline",
                    "text": "背景色",
                    "bindKey": "subBgColor",
                    "placeholder": "请选择颜色",
                    "default": {
                        "hex": "#FFFFFF",
                        "hex8": "#FFFFFFFF"
                    }
                },
                {
                    "type": "box",
                    "layoutType": "block",
                    "text": "内外边距",
                    "bindKey": "subBox",
                    "default": {
                        "marginTopVal": "",
                        "marginRightVal": "",
                        "marginBottomVal": "10px",
                        "marginLeftVal": "",
                        "paddingTopVal": "15px",
                        "paddingRightVal": "15px",
                        "paddingBottomVal": "15px",
                        "paddingLeftVal": "15px"
                    }
                },
                {
                    "type": "box",
                    "layoutType": "block",
                    "text": "子项边距",
                    "desc": "设置组件单项元素内的子项元素的内外边距",
                    "bindKey": "subLineBox",
                    "default": {
                        "marginTopVal": "",
                        "marginRightVal": "",
                        "marginBottomVal": "15px",
                        "marginLeftVal": "",
                        "paddingTopVal": "",
                        "paddingRightVal": "",
                        "paddingBottomVal": "",
                        "paddingLeftVal": ""
                    }
                },
                {
                    "type": "border",
                    "layoutType": "block",
                    "text": "边框",
                    "bindKey": "subBorder",
                    "default": {
                        "border": {
                            "top": {
                                "style": "",
                                "width": 0,
                                "widthUnit": "px",
                                "colors": {}
                            },
                            "right": {
                                "style": "",
                                "width": 0,
                                "widthUnit": "px",
                                "colors": {}
                            },
                            "bottom": {
                                "style": "",
                                "width": 0,
                                "widthUnit": "px",
                                "colors": {}
                            },
                            "left": {
                                "style": "",
                                "width": 0,
                                "widthUnit": "px",
                                "colors": {}
                            }
                        },
                        "radius": {
                            "leftTop": {
                                "radius": 3,
                                "radiusUnit": "px"
                            },
                            "rightTop": {
                                "radius": 3,
                                "radiusUnit": "px"
                            },
                            "leftBottom": {
                                "radius": 3,
                                "radiusUnit": "px"
                            },
                            "rightBottom": {
                                "radius": 3,
                                "radiusUnit": "px"
                            }
                        }
                    }
                },
                {
                    "type": "font",
                    "layoutType": "block",
                    "text": "用户昵称文字",
                    "bindKey": "usernameFont",
                    "default": {
                        "fontColors": {
                            "hex": "#333333",
                            "hex8": "#333333FF"
                        },
                        "fontSize": 16,
                        "fontSizeUnit": "px"
                    }
                },
                {
                    "type": "font",
                    "layoutType": "block",
                    "text": "时间文字",
                    "bindKey": "timeFont",
                    "default": {
                        "fontSize": 14,
                        "fontSizeUnit": "px",
                        "fontColors": {}
                    }
                },
                {
                    "type": "group",
                    "layoutType": "block",
                    "text": "图标样式",
                    "children": [
                        {
                            "type": "input",
                            "layoutType": "inline",
                            "text": "图标尺寸",
                            "desc": "设置复选框图标大小",
                            "bindKey": "iconSize"
                        },
                        {
                            "type": "box",
                            "layoutType": "block",
                            "text": "内外边距",
                            "desc": "标题同行的图片上边距无效",
                            "bindKey": "iconBox",
                            "default": {
                                "marginTopVal": "12px",
                                "marginRightVal": "15px",
                                "marginBottomVal": "",
                                "marginLeftVal": "",
                                "paddingTopVal": "",
                                "paddingRightVal": "",
                                "paddingBottomVal": "",
                                "paddingLeftVal": ""
                            }
                        }
                    ]
                },
                {
                    "type": "group",
                    "layoutType": "block",
                    "text": "头像样式",
                    "children": [
                        {
                            "type": "input",
                            "layoutType": "inline",
                            "text": "宽",
                            "desc": "填写auto则为自适应，或者使用px、%、vw等单位，比如100%、100px、100vw等等",
                            "bindKey": "avatarWidth",
                            "default": "50px"
                        },
                        {
                            "type": "input",
                            "layoutType": "inline",
                            "text": "高",
                            "desc": "填写auto则为自适应，或者使用px、%、vh等单位，比如100%、100px、100vh等等",
                            "bindKey": "avatarHeight",
                            "default": "50px"
                        },
                        {
                            "type": "border",
                            "layoutType": "block",
                            "text": "边框",
                            "bindKey": "avatarBorder",
                            "default": {
                                "border": {
                                    "top": {
                                        "style": "",
                                        "width": 0,
                                        "widthUnit": "px",
                                        "colors": {}
                                    },
                                    "right": {
                                        "style": "",
                                        "width": 0,
                                        "widthUnit": "px",
                                        "colors": {}
                                    },
                                    "bottom": {
                                        "style": "",
                                        "width": 0,
                                        "widthUnit": "px",
                                        "colors": {}
                                    },
                                    "left": {
                                        "style": "",
                                        "width": 0,
                                        "widthUnit": "px",
                                        "colors": {}
                                    }
                                },
                                "radius": {
                                    "leftTop": {
                                        "radius": 50,
                                        "radiusUnit": "px"
                                    },
                                    "rightTop": {
                                        "radius": 50,
                                        "radiusUnit": "px"
                                    },
                                    "leftBottom": {
                                        "radius": 50,
                                        "radiusUnit": "px"
                                    },
                                    "rightBottom": {
                                        "radius": 50,
                                        "radiusUnit": "px"
                                    }
                                }
                            }
                        },
                        {
                            "type": "box",
                            "layoutType": "block",
                            "text": "内外边距",
                            "bindKey": "avatarBox",
                            "default": {
                                "marginTopVal": "3px",
                                "marginRightVal": "15px",
                                "marginBottomVal": "",
                                "marginLeftVal": "",
                                "paddingTopVal": "",
                                "paddingRightVal": "",
                                "paddingBottomVal": "",
                                "paddingLeftVal": ""
                            }
                        }
                    ]
                },
                {
                    "type": "group",
                    "layoutType": "block",
                    "text": "标题样式",
                    "children": [
                        {
                            "type": "box",
                            "layoutType": "block",
                            "text": "内外边距",
                            "bindKey": "titleBox",
                            "default": {
                                "marginTopVal": "",
                                "marginRightVal": "",
                                "marginBottomVal": "10px",
                                "marginLeftVal": "",
                                "paddingTopVal": "",
                                "paddingRightVal": "",
                                "paddingBottomVal": "10px",
                                "paddingLeftVal": ""
                            }
                        },
                        {
                            "type": "border",
                            "layoutType": "block",
                            "text": "边框",
                            "bindKey": "titleBorder",
                            "default": {
                                "border": {
                                    "top": {
                                        "style": "",
                                        "width": 0,
                                        "widthUnit": "px",
                                        "colors": {}
                                    },
                                    "right": {
                                        "style": "",
                                        "width": 0,
                                        "widthUnit": "px",
                                        "colors": {}
                                    },
                                    "bottom": {
                                        "style": "solid",
                                        "width": 1,
                                        "widthUnit": "px",
                                        "colors": {
                                            "hex": "#E4E0E0",
                                            "hex8": "#E4E0E0FF"
                                        }
                                    },
                                    "left": {
                                        "style": "",
                                        "width": 0,
                                        "widthUnit": "px",
                                        "colors": {}
                                    }
                                },
                                "radius": {
                                    "leftTop": {
                                        "radius": 0,
                                        "radiusUnit": "px"
                                    },
                                    "rightTop": {
                                        "radius": 0,
                                        "radiusUnit": "px"
                                    },
                                    "leftBottom": {
                                        "radius": 0,
                                        "radiusUnit": "px"
                                    },
                                    "rightBottom": {
                                        "radius": 0,
                                        "radiusUnit": "px"
                                    }
                                }
                            }
                        },
                        {
                            "type": "font",
                            "layoutType": "block",
                            "text": "标题文字",
                            "bindKey": "titleFont",
                            "default": {
                                "fontColors": {
                                    "hex": "#333333",
                                    "hex8": "#333333FF"
                                },
                                "fontSize": 16,
                                "fontSizeUnit": "px"
                            }
                        }
                    ]
                },
                {
                    "type": "group",
                    "layoutType": "block",
                    "text": "内容样式",
                    "children": [
                        {
                            "type": "inputNumber",
                            "layoutType": "inline",
                            "text": "内容行数",
                            "bindKey": "contentClamp",
                            "default": 2
                        },
                        {
                            "type": "box",
                            "layoutType": "block",
                            "text": "内外边距",
                            "bindKey": "contentBox",
                            "default": {
                                "marginTopVal": "5px",
                                "marginRightVal": "",
                                "marginBottomVal": "",
                                "marginLeftVal": "",
                                "paddingTopVal": "",
                                "paddingRightVal": "",
                                "paddingBottomVal": "",
                                "paddingLeftVal": ""
                            }
                        },
                        {
                            "type": "font",
                            "layoutType": "block",
                            "text": "文字",
                            "bindKey": "contentFont",
                            "default": {
                                "fontColors": {},
                                "fontSize": 13,
                                "fontSizeUnit": "px"
                            }
                        }
                    ]
                }
            ]
        },

        {
            "type": "table",
            "text": "主题设置",
            "desc": "点击？查看主题设置用法指南",
            "bindKey": "themeList",
            "tabText": "主题[index]",
            "default": [
                {
                    "key": "blue",
                    "mainColor": {
                        "hex": "#0073CA",
                        "hex8": "#0073CAFF"
                    }
                },
                {
                    "key": "red",
                    "mainColor": {
                        "hex": "#E21A1A",
                        "hex8": "#E21A1AFF"
                    }
                },
                {
                    "key": "green",
                    "mainColor": {
                        "hex": "#0EAF64",
                        "hex8": "#0EAF64FF"
                    }
                }
            ],
            "children": [
                {
                    "type": "select",
                    "layoutType": "inline",
                    "text": "主题标识",
                    "bindKey": "key",
                    "multiple": false,
                    "desc": "用于设置主题的标识，此项需要搭配自定义开发切换主题的功能，例如：蓝色标识为blue，用户切换主题的时候存储到数据库中的标识为blue，则这里填写为blue",
                    "default": "",
                    "placeholder": "例如：blue",
                    "ctrlAttrObject": {
                        "mode": "combobox"
                    },
                    "dictionary": [
                        {
                            "label": "blue",
                            "value": "blue"
                        },
                        {
                            "label": "red",
                            "value": "red"
                        },
                        {
                            "label": "green",
                            "value": "green"
                        }
                    ]
                },
                {
                    "type": "colorPicker",
                    "layoutType": "inline",
                    "text": "主要颜色",
                    "bindKey": "mainColor",
                    "desc": "主题的主要颜色",
                    "placeholder": "请选择颜色",
                    "display": "@[key]"
                }
            ]
        },
        {
            "type": "group",
            "text": "高级",
            "desc": "点击？查看高级设置用法指南",
            "children": [
                {
                    "type": "pageModuleSelect",
                    "layoutType": "inline",
                    "text": "联动组件",
                    "desc": "配置卡片选中状态改变时需要发送信息的组件",
                    "bindKey": "triggerComponents",
                    "default": [],
                    "multiple": true
                },
                {
                    "type": "dataSourceSelect",
                    "layoutType": "inline",
                    "text": "数据源",
                    "desc": "数据返回示例：{value: [], count: 0, moreUrl: ''}",
                    "bindKey": "dataSource"
                },
                {
                    "type": "group",
                    "text": "适配设置",
                    "desc": "通过设置属性来适配移动端页面尺寸",
                    "children": [
                        {
                            "type": "inputNumber",
                            "layoutType": "inline",
                            "text": "基准值",
                            "desc": "此属性用于标记当前组件在显示效果最完美情况下的宽度大小（px），例如：此组件显示效果最佳宽度为414px，则此处设置为414即可，如果此组件最佳效果为当前配置的屏幕宽（px）的一半则只需要除以2即可。",
                            "bindKey": "baseSize",
                            "default": 414
                        },
                        {
                            "type": "inputNumber",
                            "layoutType": "inline",
                            "text": "适配比例",
                            "desc": "与基准值配合使用，如果在实际预览屏幕宽为基准值的两倍，则此组件所有可适配的内容都会基于此处设置的适配比例相对应的进行放大缩小，例如此处设置1.2，则会相对应的放大至1.2倍",
                            "bindKey": "adaptationRatio",
                            "default": 1.2
                        }
                    ]
                },
                {
                    "type": "group",
                    "text": "字段设置",
                    "desc": "设置从列表项中展示的对应字段",
                    "children": [
                        {
                            "type": "dataSourceFiledSelect",
                            "layoutType": "inline",
                            "text": "选中字段",
                            "bindKey": "isCheckField",
                            "disabled": true,
                            "desc": "设置卡片是否选中状态，不可修改",
                            "default": "isCheck"
                        },
                        {
                            "type": "dataSourceFiledSelect",
                            "layoutType": "inline",
                            "text": "标题字段",
                            "bindKey": "titleField",
                            "default": "title"
                        },
                        {
                            "type": "dataSourceFiledSelect",
                            "layoutType": "inline",
                            "text": "头像字段",
                            "bindKey": "avatarField",
                            "default": "avatar"
                        },
                        {
                            "type": "dataSourceFiledSelect",
                            "layoutType": "inline",
                            "text": "姓名字段",
                            "bindKey": "usernameField",
                            "default": "username"
                        },
                        {
                            "type": "dataSourceFiledSelect",
                            "layoutType": "inline",
                            "text": "时间字段",
                            "bindKey": "timeField",
                            "default": "time"
                        },
                        {
                            "type": "dataSourceFiledSelect",
                            "layoutType": "inline",
                            "text": "内容字段",
                            "bindKey": "contentField",
                            "default": "content"
                        }
                    ]
                }
            ]
        }
    ]
}
