{
  "classId": "idm.component.mobile.icommentpublish",
  "comName": "评论编辑",
  "className": "ICommentPublish",
  "comType": "common",
  "comLangue": "vue",
  "compositeAttr": [
    {
      "type": "input",
      "layoutType": "inline",
      "text": "唯一标识",
      "bindKey": "ctrlId",
      "disabled": true,
      "default": "@[packageid]",
      "desc": "",
      "helpUrl": ""
    },
    {
      "type": "group",
      "text": "底部按钮容器样式",
      "desc": "点击？查看样式设置用法指南",
      "helpUrl": "",
      "children": [
        {
          "type": "group",
          "text": "按钮定位",
          "children": [
            {
              "type": "input",
              "layoutType": "block",
              "text": "top",
              "desc": "使用px、%、vw等单位，比如100%、100px、100vw等等",
              "bindKey": "btnTop",
              "default": "auto"
            },
            {
              "type": "input",
              "layoutType": "block",
              "text": "right",
              "desc": "使用px、%、vw等单位，比如100%、100px、100vw等等",
              "bindKey": "btnRight",
              "default": "auto"
            },
            {
              "type": "input",
              "layoutType": "block",
              "text": "bottom",
              "desc": "使用px、%、vw等单位，比如100%、100px、100vw等等",
              "bindKey": "btnBottom",
              "default": "0"
            },
            {
              "type": "input",
              "layoutType": "block",
              "text": "left",
              "desc": "使用px、%、vw等单位，比如100%、100px、100vw等等",
              "bindKey": "btnLeft",
              "default": "auto"
            }
          ]
        },
        {
          "type": "inlineGroup",
          "text": "宽高",
          "children": [
            {
              "type": "input",
              "layoutType": "block",
              "text": "容器宽",
              "desc": "填写auto则为自适应，或者使用px、%、vw等单位，比如100%、100px、100vw等等",
              "bindKey": "btnFootBoxWidth",
              "width": "60px",
              "default": "100%"
            },
            {
              "type": "input",
              "layoutType": "block",
              "text": "容器高",
              "desc": "填写auto则为自适应，或者使用px、%、vh等单位，比如100%、100px、100vh等等",
              "bindKey": "btnFootBoxHeight",
              "width": "60px",
              "default": "60px"
            }
          ]
        },
        {
          "type": "box",
          "layoutType": "block",
          "text": "内外边距",
          "bindKey": "btnFootBox",
          "default": {
            "marginTopVal": "",
            "marginRightVal": "",
            "marginBottomVal": "",
            "marginLeftVal": "",
            "paddingTopVal": "",
            "paddingRightVal": "10px",
            "paddingBottomVal": "",
            "paddingLeftVal": "10px"
          }
        },
        {
          "type": "colorPicker",
          "layoutType": "inline",
          "text": "背景色",
          "bindKey": "btnFootBoxColor",
          "placeholder": "请选择颜色",
          "default": {
            "hex": "#FFFFFFFF",
            "hex8": "#FFFFFFFF"
          }
        },
        {
          "type": "input",
          "layoutType": "inline",
          "text": "容器阴影",
          "bindKey": "btnFootBoxShadown",
          "default": "0px 0px 10px 0px #e3dede"
        },
        {
          "type": "border",
          "layoutType": "block",
          "text": "容器边框",
          "bindKey": "btnFootBoxBorder"
        }
      ]
    },
    {
      "type": "group",
      "text": "高级",
      "desc": "点击？查看高级设置用法指南",
      "children": [
        {
          "type": "actionSelect",
          "layoutType": "block",
          "text": "设置请求评论参数",
          "desc": "设置请求评论参数",
          "bindKey": "publishComment",
          "multiple": false
        },
        {
          "type": "input",
          "layoutType": "inline",
          "text": "提交接口",
          "bindKey": "publishCommentUrl"
        },
        {
          "type": "pageModuleSelect",
          "layoutType": "block",
          "text": "评论菜单联动组件",
          "desc": "选择点击评论菜单需要联动组件",
          "bindKey": "triggerComponents",
          "multiple": true
        },
        {
          "type": "input",
          "layoutType": "block",
          "text": "回复@用户名字段",
          "bindKey": "replayUserName"
        }
      ]
    }
  ]
}
