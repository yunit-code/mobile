{
  "classId": "idm.component.mobile.integralDetal",
  "comName": "积分明细",
  "className": "IntegralDetal",
  "comType": "common",
  "comLangue": "vue",
  "compositeAttr": [
    {
      "type": "input",
      "layoutType": "inline",
      "text": "唯一标识",
      "bindKey": "ctrlId",
      "disabled": true,
      "default": "@[packageid]",
      "desc": "",
      "helpUrl": ""
    },
    {
      "type": "group",
      "text": "基本属性",
      "desc": "提供设置组件能达到展示效果的基本属性设置信息",
      "children": [

      ]
    },
    {
      "type": "group",
      "text": "头部样式设置",
      "desc": "点击？查看样式设置用法指南",
      "helpUrl": "",
      "children": [
        {
          "type": "inlineGroup",
          "text": "宽高",
          "children": [
            {
              "type": "input",
              "layoutType": "block",
              "text": "宽",
              "desc": "填写auto则为自适应，或者使用px、%、vw等单位，比如100%、100px、100vw等等",
              "bindKey": "boxtopWidth",
              "width": "60px",
              "default": "auto"
            },
            {
              "type": "input",
              "layoutType": "block",
              "text": "高",
              "desc": "填写auto则为自适应，或者使用px、%、vh等单位，比如100%、100px、100vh等等",
              "bindKey": "boxtopHeight",
              "width": "60px",
              "default": "200px"
            }
          ]
        },
        {
          "type": "colorPicker",
          "layoutType": "inline",
          "text": "背景色",
          "bindKey": "boxtopbg",
          "placeholder": "请选择颜色",
          "default": {
            "hex": "#FFFFFF",
            "hex8": "#FFFFFFFF"
          }
        },
        {
          "type": "input",
          "layoutType": "inline",
          "text": "容器阴影",
          "bindKey": "boxtopShadow",
          "default": "0px 0px 10px 0px #e3dede"
        }
      ]
    },
    {
      "type": "group",
      "text": "底部样式设置",
      "desc": "点击？查看样式设置用法指南",
      "helpUrl": "",
      "children": [
        {
          "type": "box",
          "layoutType": "block",
          "text": "内外边距",
          "bindKey": "box",
          "default": {
            "marginTopVal": "-20px",
            "marginRightVal": "10px",
            "marginBottomVal": "",
            "marginLeftVal": "10px",
            "paddingTopVal": "",
            "paddingRightVal": "10px",
            "paddingBottomVal": "",
            "paddingLeftVal": "10px"
          }
        }
      ]
    }
  ]
}