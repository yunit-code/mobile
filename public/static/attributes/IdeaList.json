{
  "classId": "idm.component.mobile.idealist",
  "comName": "意见列表",
  "className": "IdeaList",
  "comType": "common",
  "comLangue": "vue",
  "compositeAttr": [
      {
        "type": "input",
        "layoutType": "inline",
        "text": "唯一标识",
        "bindKey": "ctrlId",
        "disabled": true,
        "default": "@[packageid]",
        "desc": "",
        "helpUrl": ""
      },
      {
        "type": "group",
        "text": "基本属性",
        "desc": "提供设置组件能达到展示效果的基本属性设置信息",
        "children": [
          {
            "type": "select",
            "layoutType": "inline",
            "text": "跳转方式",
            "bindKey": "jumpStyle",
            "desc": "设置点击轮播图片时跳转方式, 链接打开时使用window.open配置的数据源链接",
            "dictionary": [
                {
                    "label": "子页面打开",
                    "value": "_child"
                },
                {
                    "label": "接口链接",
                    "value": "_link"
                },
                {
                    "label": "自定义链接",
                    "value": "_custom_link"
                },
                {
                    "label": "自定义函数",
                    "value": "_custom_func"
                }
            ],
            "default": "_link"
          },
          {
            "type": "pageSelect",
            "layoutType": "inline",
            "text": "详情页面",
            "display": "@[jumpStyle === '_child']",
            "bindKey": "morePageList",
            "desc": "选择要打开的子页面"
          },
          {
            "type": "radio",
            "styleType": "radio",
            "layoutType": "inline",
            "text": "是否缓存",
            "display": "@[jumpStyle === '_child']",
            "bindKey": "isPageKeep",
            "desc": "跳转子页面时，是否缓存本页面",
            "default": true,
            "dictionary": [
                {
                    "label": "是",
                    "value": true
                },
                {
                    "label": "否",
                    "value": false
                }
            ]
          },
          {
            "type": "input",
            "layoutType": "inline",
            "text": "跳转链接",
            "defaultValRegExp": false,
            "display": "@[jumpStyle === '_custom_link']",
            "bindKey": "customLink"
          },
          {
            "type": "actionSelect",
            "layoutType": "block",
            "text": "自定义跳转函数",
            "display": "@[jumpStyle === '_custom_func']",
            "bindKey": "jumpCustomFunc",
            "multiple": false
          },
          {
            "type": "switch",
            "layoutType": "inline",
            "text": "头像显示",
            "desc":"头像是否显示",
            "bindKey": "headImg",
            "default": true
          },
          {
            "type": "switch",
            "layoutType": "inline",
            "text": "描述显示",
            "desc":"描述是否显示",
            "bindKey": "isDesc",
            "default": true
          },
          {
            "type": "switch",
            "layoutType": "inline",
            "text": "日期显示",
            "desc":"日期是否显示",
            "bindKey": "isDate",
            "default": true
          },
          {
            "type": "switch",
            "layoutType": "inline",
            "text": "回复显示",
            "desc":"回复是否显示",
            "bindKey": "isType",
            "default": true
          },
          {
            "type": "input",
            "layoutType": "inline",
            "text": "待回复标题",
            "bindKey": "waitTitle",
            "default": "待回复"
          },
          {
            "type": "font",
            "layoutType": "block",
            "text": "待回复样式",
            "bindKey": "waitStyle",
            "default": {
                "fontColors": {
                    "hex": "#f00"
                },
                "fontSize": 14,
                "fontSizeUnit": "px"
            }
          },
          {
            "type": "input",
            "layoutType": "inline",
            "text": "已回复标题",
            "bindKey": "yetTitle",
            "default": "已回复"
          },
          {
            "type": "font",
            "layoutType": "block",
            "text": "已回复样式",
            "bindKey": "yetStyle",
            "default": {
                "fontColors": {
                    "hex": "#000000"
                },
                "fontSize": 14,
                "fontSizeUnit": "px"
            }
          }
        ]
      },
      {
        "type": "group",
        "text": "样式设置",
        "desc": "点击？查看样式设置用法指南",
        "helpUrl": "",
        "children": [
          {
            "type": "colorPicker",
            "layoutType": "inline",
            "text": "背景色",
            "bindKey": "bgColor",
            "placeholder": "请选择颜色",
            "default": {
              "hex": "#FFFFFF",
              "hex8": "#FFFFFFFF"
            }
          },
          {
            "type": "box",
            "layoutType": "block",
            "text": "容器内外边距",
            "bindKey": "box",
            "default": {
              "marginTopVal": "",
              "marginRightVal": "",
              "marginBottomVal": "",
              "marginLeftVal": "",
              "paddingTopVal": "",
              "paddingRightVal": "10px",
              "paddingBottomVal": "",
              "paddingLeftVal": "10px"
            }
          },
          {
            "type": "box",
            "layoutType": "block",
            "text": "列表边距",
            "bindKey": "liBox",
            "default": {
              "marginTopVal": "",
              "marginRightVal": "",
              "marginBottomVal": "",
              "marginLeftVal": "",
              "paddingTopVal": "20px",
              "paddingRightVal": "20px",
              "paddingBottomVal": "20px",
              "paddingLeftVal": "20px"
            }
          },
          {
            "type": "input",
            "layoutType": "inline",
            "text": "分割距离",
            "bindKey": "liSplitHeight",
            "default": "10px"
          },
          {
            "type": "input",
            "layoutType": "inline",
            "text": "列表阴影",
            "bindKey": "liBoxShadow",
            "default": "0px  0px 20px 0px #ccc"
          },
          {
            "type": "border",
            "layoutType": "block",
            "text": "列表边框",
            "bindKey": "border"
          },
          {
            "type": "font",
            "layoutType": "block",
            "text": "字体名称",
            "bindKey": "titleStyle",
            "default": {
                "fontColors": {
                    "hex": "#000000"
                },
                "fontSize": 14,
                "fontSizeUnit": "px"
            }
          },
          {
            "type": "font",
            "layoutType": "block",
            "text": "字体日期",
            "bindKey": "timeStyle",
            "default": {
                "fontColors": {
                    "hex": "#000000"
                },
                "fontSize": 14,
                "fontSizeUnit": "px"
            }
          },
          {
            "type": "font",
            "layoutType": "block",
            "text": "字体描述",
            "bindKey": "descStyle",
            "default": {
                "fontColors": {
                    "hex": "#000000"
                },
                "fontSize": 14,
                "fontSizeUnit": "px"
            }
          }
        ]
      },
      {
        "type": "group",
        "text": "高级",
        "desc": "点击？查看高级设置用法指南",
        "children": [
          {
            "type": "treeSelect",
            "layoutType": "inline",
            "text": "数据源",
            "bindKey": "dataSource",
            "dataSourceUrl":"/ctrl/dataSource/getDatasourceByGroup"
          },
          {
            "type": "group",
            "text": "字段设置",
            "desc": "页面数据绑定",
            "children": [
              {
                "type": "textarea",
                "layoutType": "inline",
                "text": "头像字段",
                "bindKey": "ImgInterface",
                "default": "headImg"
              },
              {
                "type": "textarea",
                "layoutType": "inline",
                "text": "标题字段",
                "bindKey": "titleInterface",
                "default": "title"
              },
              {
                "type": "textarea",
                "layoutType": "inline",
                "text": "描述字段",
                "bindKey": "descInterface",
                "default": "desc"
              },
              {
                "type": "textarea",
                "layoutType": "inline",
                "text": "日期字段",
                "bindKey": "TimeInterface",
                "default": "time"
              },
              {
                "type": "textarea",
                "layoutType": "inline",
                "text": "待回复字段",
                "bindKey": "activeInterface",
                "default": "type == '1'"
              },
              {
                "type": "input",
                "layoutType": "inline",
                "text": "跳转字段",
                "desc": "跳转字段",
                "bindKey": "jumpField",
                "default": "jumpUrl"
              }
            ]
          }
        ]
      }
  ]
}