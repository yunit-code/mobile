                        {
                            "label": "子页面打开",
                            "value": "_child"
                        },
                        {
                            "label": "接口链接打开",
                            "value": "_link"
                        },
                        {
                            "label": "自定义链接",
                            "value": "_custom_link"
                        },
                        {
                            "label": "自定义函数",
                            "value": "_custom_func"
                        }
                    ],
                    "default": "_link"
                },
                {
                    "type": "pageSelect",
                    "layoutType": "inline",
                    "text": "跳转页面",
                    "display": "@[jumpStyle === '_child']",
                    "bindKey": "jumpPageList",
                    "desc": "选择要跳转的页面"
