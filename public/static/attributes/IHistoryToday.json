                    "type": "radio",
                    "styleType": "radio",
                    "layoutType": "inline",
                    "text": "是否缓存",
                    "display": "@[jumpStyle === '_child']",
                    "bindKey": "isPageKeep",
                    "desc": "跳转子页面时，是否缓存本页面",
                    "default": true,
                    "dictionary": [
                        {
                            "label": "是",
                            "value": true
                        },
                        {
                            "label": "否",
                            "value": false
                        }
                    ]
                },
                {
                    "type": "input",
                    "layoutType": "inline",
                    "text": "跳转链接",
                    "desc": "自定义跳转链接",
                    "defaultValRegExp": false,
                    "display": "@[jumpStyle === '_custom_link']",
                    "bindKey": "customLink"
                },
                {
                    "type": "actionSelect",
                    "layoutType": "block",
                    "text": "自定义点击跳转函数",
                    "display": "@[jumpStyle === '_custom_func']",
                    "bindKey": "jumpCustomFunc",
                    "multiple": false
